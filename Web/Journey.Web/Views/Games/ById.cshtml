                        <li id="star-li" class="star-empty fa-2x" data-vote="4"><i id="star" class="fas fa-star"></i></li>
                        <li id="star-li" class="star-empty fa-2x" data-vote="5"><i id="star" class="fas fa-star"></i></li>
