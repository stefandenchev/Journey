@model IEnumerable<UserViewModel>
@{ Layout = "_Layout - Chat";}

<div class="container row">
    @foreach (var user in Model)
    {
        <div class="user-thumb column mt-3 ml-3 p-2">
            <a asp-controller="Chat" asp-action="CreatePrivateRoom" asp-route-userId="@user.Id">
                <img class="profile-picture-main" src="@user.Profile.ImageUrl" alt="Profile Picture" style="width:150px; height:150px" />
                <div class="card-body">
                    <h5 class="profile-name">@user.UserName</h5>
                </div>
            </a>
        </div>
    }
</div>