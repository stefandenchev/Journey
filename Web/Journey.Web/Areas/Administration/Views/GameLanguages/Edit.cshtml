@model Journey.Web.ViewModels.Administration.GameLanguage.GameLanguageAdminInputModel

@{
    ViewData["Title"] = "Edit";
    var languageItems = this.Model.LanguagesItems.Select(x => new SelectListItem(x.Value, x.Key));
    var gameItems = this.Model.GamesItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1>Edit</h1>

<h4>GameLanguage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label asp-for="GameId"></label>
                <select asp-for="GameId" class="form-control" asp-items="gameItems"></select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LanguageId"></label>
                <select asp-for="LanguageId" class="form-control" asp-items="languageItems"></select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedOn" value="@Model.CreatedOn" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
